@model List<ApplicationCore.Models.MovieCard>


@{
    ViewData["Title"] = "Home Page";
}

<div class="rounded">
    <div class="container-fluid">
        <div class="row">
            @foreach (var movie in Model)
            {
                <div>
                    class="col-6 col-sm-4 col-md-3 col-xl-2">
                    <div class="card mb-4">
                        <a>
                        <img src="@movie.PosterUrl" alt="@movie.Title" class="img-fluid" />
                        </a>
                    </div>
                </div>
            }
           
        </div>
    </div>
</div>